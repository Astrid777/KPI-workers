@model List<CustomIdentityApp.ViewModels.RatingViewModel>

<h1>Оценка сотрудника</h1>
<h4>@ViewBag.UserBag</h4>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Показатель
                </th>
                <th>
                    Значение
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input asp-for="@Model[i].Id" class="form-control" hidden />
                    <input asp-for="@Model[i].UserId" class="form-control" hidden />
                    <input asp-for="@Model[i].IndicatorId" class="form-control" hidden />

                    <input asp-for="@Model[i].IndicatorName" class="form-control" readonly />
                </td>
                <td>
                    <select asp-for="@Model[i].Value" class="form-control" asp-items="ViewBag.Value"></select>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <input type="submit" value="Сохранить" class="btn btn-primary" />
    </form>