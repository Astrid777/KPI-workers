@model CustomIdentityApp.Models.Indicator

<h4>Редактирование показателя</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @if (User.IsInRole("Администратор"))
            {
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <p>
                        <select  asp-for="DepartmentId" asp-items="ViewBag.Departments" class="custom-control-inline"></select>
                    
                    </p>
                </div>
            }

            @if (User.IsInRole("Модератор"))
            {
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <p>
                        <select  asp-for="DepartmentId" asp-items="ViewBag.Departments" disabled class="custom-control-inline"></select>
                    </p>
                   
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
