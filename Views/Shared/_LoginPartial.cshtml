@using Microsoft.AspNetCore.Identity
@using CustomIdentityApp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="PersonalArea" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="Logout" class="form-inline">
                <input type="submit" value="Выход" class="nav-link btn btn-link text-dark"/>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Войти</a>
        </li>
    }
</ul>
